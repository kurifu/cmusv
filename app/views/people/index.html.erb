function toggleAny(element)
{
  checkboxID = element.id;
  filter = checkboxID.slice(0,checkboxID.lastIndexOf('_'));

  if($('#'+checkboxID).is(':checked'))
    {
      $("."+filter).show();
    }
    else
    {
      $("."+filter).hide();
    }

  $("#filterBoxOne").trigger("keyup");
}


